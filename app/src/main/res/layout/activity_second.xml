<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/receivedTextView"
        android:layout_width="270dp"
        android:layout_height="39dp"
        android:layout_marginTop="200dp"
        android:padding="8dp"
        android:text="Data frÃ¥n MainActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/responseEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="Svara tillbaka"
        app:layout_constraintEnd_toEndOf="@+id/receivedTextView"
        app:layout_constraintStart_toStartOf="@+id/receivedTextView"
        app:layout_constraintTop_toBottomOf="@+id/receivedTextView" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Skicka tillbaka"
        app:layout_constraintEnd_toEndOf="@+id/responseEditText"
        app:layout_constraintStart_toStartOf="@+id/responseEditText"
        app:layout_constraintTop_toBottomOf="@+id/responseEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>
